<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up_option"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context="com.vishant.DentalJobVideo.activity.SignUpOptionActivity">

    <android.support.v7.widget.AppCompatSpinner
        android:spinnerMode="dialog"
        android:id="@+id/signup_user_type"
        style="@style/login_spinner"
        android:prompt="@string/signup_account_type_text"
        android:layout_below="@id/signup_header"
        android:background="@mipmap/dropdown_text_feild"
        android:layout_marginTop="@dimen/signup_account_type_topmargin">

    </android.support.v7.widget.AppCompatSpinner>

    <Button
        android:id="@+id/signup_sign_up_btn"
        android:layout_below="@id/signup_user_type"
        android:layout_marginTop="@dimen/signup_sign_up_button_top_margin"
        android:background="@mipmap/sign_up_button"
        style="@style/login_buttons"/>

    <include layout="@layout/top_header_layout"
        android:id="@+id/signup_header"/>

</RelativeLayout>
