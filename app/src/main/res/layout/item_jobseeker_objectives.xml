<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/view_profile_objective_detail"
        android:layout_centerVertical="true"
        android:textColor="@color/view_profile_field_color"
        android:layout_marginLeft="@dimen/view_profile_job_seeker_info_title_leftmargin"
        android:paddingTop="@dimen/view_profile_job_seeker_professional_skills_padding"
        android:paddingBottom="@dimen/view_profile_job_seeker_professional_skills_padding"
        android:layout_marginRight="@dimen/view_profile_job_seeker_professional_skills_right_margin"
        android:textSize="@dimen/view_profile_job_seeker_details_detail_textsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/view_profile_objective_seperator"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/view_profile_job_seeker_details_seperator_height"
        android:background="@mipmap/seperator"/>

    <ImageView
        android:layout_marginTop="@dimen/view_profile_job_seeker_objectives_editicon_topmargin"
        android:id="@+id/view_profile_objective_edit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/view_profile_job_seeker_details_edit_rightmargin"
        android:layout_width="@dimen/view_profile_job_seeker_details_edit_iconsize"
        android:layout_height="@dimen/view_profile_job_seeker_details_edit_iconsize"
        android:background="@mipmap/ic_edit"
        android:visibility="visible"/>
</RelativeLayout>