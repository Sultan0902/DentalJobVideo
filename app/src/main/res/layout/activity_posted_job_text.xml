<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_posted_job_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context="com.vishant.DentalJobVideo.activity.employeer.PostedJobTextActivity">

    <include layout="@layout/top_header_layout"
        android:id="@+id/posted_text_job_header"></include>
    <RelativeLayout
        android:id="@+id/posted_text_job_info_layout"
        android:layout_marginLeft="@dimen/acitivity_posted_job_employeer_info_margin"
        android:layout_marginRight="@dimen/acitivity_posted_job_employeer_info_margin"
        android:layout_marginTop="@dimen/acitivity_posted_job_employeer_image_top_margin"
        android:layout_below="@+id/posted_text_job_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/posted_text_job_info_image_layout"
            android:layout_width="@dimen/acitivity_posted_job_employeer_image_size"
            android:layout_height="@dimen/acitivity_posted_job_employeer_image_size">
        <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/posted_text_job_info_image"
                android:layout_margin="@dimen/signup_image_padding"
                app:civ_border_width="0dp"
                app:civ_border="false"
                android:background="@mipmap/img_holder_inline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/posted_text_job_info_image_holder"
                android:background="@mipmap/ic_image_holder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>


        <EditText
            android:id="@+id/posted_text_job_info_title"
            android:layout_toRightOf="@id/posted_text_job_info_image_layout"
            android:text="@string/job_posted_info_title_dummytext"
            style="@style/posted_job_info_title"
            />
        <EditText
            android:id="@+id/posted_text_job_info_desc"
            android:layout_below="@+id/posted_text_job_info_title"
            android:text="@string/job_posted_info_desc_dummytext"
            android:layout_toRightOf="@id/posted_text_job_info_image_layout"
            style="@style/posted_job_info_desc"
            android:layout_marginTop="0dp">
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        style="@style/posted_job_desc_field_layout"
        android:id="@+id/posted_job_desc_experience_layout"
        android:layout_below="@+id/posted_text_job_info_layout"
        >
        <TextView
            android:id="@+id/posted_job_desc_experience_label_tv"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:text="@string/job_posted_info_experience"
            style="@style/posted_job_desc_field_item"
            />
        <EditText
            android:id="@+id/posted_job_desc_experience_tv"
            android:textAlignment="textEnd"
            android:gravity="center"
            android:layout_marginLeft="@dimen/acitivity_posted_job_employeer_info_margin"
            android:layout_toRightOf="@+id/posted_job_desc_experience_label_tv"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/posted_job_desc_field_item"
            />
    </RelativeLayout>


    <RelativeLayout
        style="@style/posted_job_desc_field_layout"
        android:id="@+id/posted_job_desc_education_layout"
        android:layout_below="@+id/posted_job_desc_experience_layout"
        >
        <TextView
            android:id="@+id/posted_job_desc_education_label_tv"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:text="@string/job_posted_info_education"
            style="@style/posted_job_desc_field_item"
            />
        <EditText
            android:id="@+id/posted_job_desc_education_tv"
            android:textAlignment="textEnd"
            android:gravity="center"
            android:layout_marginLeft="@dimen/acitivity_posted_job_employeer_info_margin"
            android:layout_toRightOf="@+id/posted_job_desc_education_label_tv"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/posted_job_desc_field_item"
            />
    </RelativeLayout>

<RelativeLayout
        style="@style/posted_job_desc_field_layout"
        android:id="@+id/posted_job_desc_joiningdate_layout"
        android:layout_below="@+id/posted_job_desc_education_layout"
        >
        <TextView
            android:id="@+id/posted_job_desc_joiningdaten_label_tv"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:text="@string/job_posted_info_joining_date"
            style="@style/posted_job_desc_field_item"
            />
        <TextView
            android:id="@+id/posted_job_desc_joiningdate_tv"
            android:textAlignment="textEnd"
            android:gravity="center"
            android:layout_marginLeft="@dimen/acitivity_posted_job_employeer_info_margin"
            android:layout_toRightOf="@+id/posted_job_desc_joiningdaten_label_tv"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/posted_job_desc_field_item"
            />
    </RelativeLayout>

    <RelativeLayout
        style="@style/posted_job_desc_field_layout"
        android:id="@+id/posted_job_desc_salary_layout"
        android:layout_below="@+id/posted_job_desc_joiningdate_layout"
        >
        <TextView
            android:id="@+id/posted_job_desc_salary_label_tv"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:text="@string/job_posted_info_salary"
            style="@style/posted_job_desc_field_item"
            />
        <EditText
            android:id="@+id/posted_job_desc_salary_tv"
            android:textAlignment="textEnd"
            android:gravity="center"
            android:layout_marginLeft="@dimen/acitivity_posted_job_employeer_info_margin"
            android:layout_toRightOf="@+id/posted_job_desc_salary_label_tv"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/posted_job_desc_field_item"
            />
    </RelativeLayout>
 <RelativeLayout
        style="@style/posted_job_desc_field_layout"
        android:id="@+id/posted_job_desc_place_layout"
        android:layout_below="@+id/posted_job_desc_salary_layout"
        >
        <TextView
            android:id="@+id/posted_job_desc_place_label_tv"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:text="@string/job_posted_info_place"
            style="@style/posted_job_desc_field_item"
            />
        <TextView
            android:id="@+id/posted_job_desc_place_tv"
            android:textAlignment="textEnd"
            android:gravity="center"
            android:layout_marginLeft="@dimen/acitivity_posted_job_employeer_info_margin"
            android:layout_toRightOf="@+id/posted_job_desc_place_label_tv"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/posted_job_desc_field_item"
            />
    </RelativeLayout>
 <RelativeLayout
        style="@style/posted_job_desc_field_layout"
        android:id="@+id/posted_job_desc_category_layout"
        android:layout_below="@+id/posted_job_desc_place_layout"
        >
        <TextView
            android:id="@+id/posted_job_desc_category_label_tv"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:text="@string/job_posted_info_category"
            style="@style/posted_job_desc_field_item"
            />
        <TextView
            android:id="@+id/posted_job_desc_category_tv"
            android:textAlignment="textEnd"
            android:background="@null"
            android:gravity="center"
            android:layout_marginLeft="@dimen/acitivity_posted_job_employeer_info_margin"
            android:layout_toRightOf="@+id/posted_job_desc_category_label_tv"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/posted_job_desc_field_item"
            />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/posted_job_category_spinner"
            android:layout_width="wrap_content"
            android:spinnerMode="dialog"
            android:visibility="invisible"
            android:layout_height="wrap_content"></android.support.v7.widget.AppCompatSpinner>

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/posted_job_text_empoyeer_recyclerview"
        android:layout_width="match_parent"
        android:layout_below="@+id/posted_job_desc_category_layout"
        android:layout_marginTop="@dimen/acitivity_posted_job_employeer_rv_top_padding"
        android:layout_marginBottom="@dimen/acitivity_posted_job_employeer_rv_bottommargin"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
