<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/view_profile_experience_jobtitle"
        android:lines="1"
        android:textColor="@color/view_profile_selection_color"
        android:textSize="@dimen/view_profile_job_seeker_details_detail_textsize"
        android:layout_marginTop="@dimen/view_profile_job_seeker_education_text_topmargin"
        android:layout_marginRight="@dimen/view_profile_job_seeker_professional_skills_right_margin"
        android:layout_marginLeft="@dimen/view_profile_job_seeker_details_text_leftmargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/view_profile_experience_jobcompany"
        android:lines="1"
        android:textColor="@color/view_profile_field_color"
        android:textSize="@dimen/view_profile_job_seeker_details_detail_textsize"
        android:layout_below="@+id/view_profile_experience_jobtitle"
        android:layout_marginRight="@dimen/view_profile_job_seeker_professional_skills_right_margin"
        android:layout_marginLeft="@dimen/view_profile_job_seeker_details_text_leftmargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" /><TextView
        android:id="@+id/view_profile_experience_jobcountry"
        android:lines="1"
        android:textColor="@color/view_profile_field_color"
        android:textSize="@dimen/view_profile_job_seeker_details_detail_textsize"
        android:layout_below="@+id/view_profile_experience_jobcompany"
        android:layout_marginLeft="@dimen/view_profile_job_seeker_details_text_leftmargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/view_profile_experience_jobperiod"
        android:lines="1"
        android:textColor="@color/view_profile_field_color"
        android:textSize="@dimen/view_profile_job_seeker_details_detail_textsize"
        android:layout_below="@+id/view_profile_experience_jobcountry"
        android:layout_marginRight="@dimen/view_profile_job_seeker_professional_skills_right_margin"
        android:paddingBottom="@dimen/view_profile_job_seeker_education_text_topmargin"
        android:layout_marginLeft="@dimen/view_profile_job_seeker_details_text_leftmargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/view_profile_experience_seperator"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/view_profile_job_seeker_details_seperator_height"
        android:background="@mipmap/seperator"/>

    <ImageView
        android:layout_marginTop="@dimen/view_profile_job_seeker_experience_editicon_topmargin"
        android:id="@+id/view_profile_experience_edit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/view_profile_job_seeker_details_edit_rightmargin"
        android:layout_width="@dimen/view_profile_job_seeker_details_edit_iconsize"
        android:layout_height="@dimen/view_profile_job_seeker_details_edit_iconsize"
        android:background="@mipmap/ic_edit"
        android:visibility="visible"/>
</RelativeLayout>