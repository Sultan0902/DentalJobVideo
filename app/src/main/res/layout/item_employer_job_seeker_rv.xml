<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_jobseeker_rv_item_hieght">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/job_search_rv_item_image_leftmargin"
            android:id="@+id/item_rv_employeer_job_seeker_image_layout"
            android:layout_width="@dimen/fragment_jobseeker_rv_item_image_width"
            android:layout_height="@dimen/fragment_jobseeker_rv_item_image_height">
            <ImageView
                android:id="@+id/item_rv_employeer_job_seeker_image_holder"
                android:background="@mipmap/ic_image_holder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/item_rv_employeer_job_seeker_image"
                android:layout_margin="@dimen/fragment_jobseeker_rv_item_detail_image_padding"
                app:civ_border="false"
                android:background="@mipmap/ic_img_user"
                app:civ_border_width="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>
    <TextView
        android:id="@+id/item_rv_employeer_job_seeker_title"
        android:text="@string/job_posted_info_title_dummytext"
        style="@style/job_seeker_rv_item_title"
         />
    <TextView
        android:id="@+id/item_rv_employeer_job_seeker_detail"
        android:layout_below="@+id/item_rv_employeer_job_seeker_title"
        android:text="@string/company_profile_label_speciality"
        style="@style/job_seeker_rv_item_detail"
         />
    </RelativeLayout>

</RelativeLayout>