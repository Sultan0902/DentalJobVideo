<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_post_video_job"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context="com.vishant.DentalJobVideo.activity.employeer.PostVideoJobActivity">

    <include layout="@layout/top_header_layout"
        android:id="@+id/top_header"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_post_video_job_info_layout_topmargin"
        android:layout_below="@+id/top_header">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/activity_post_video_job_videoview_bottommargin"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/job_info_layout"
            android:paddingBottom="@dimen/activity_post_video_job_info_layout_bottompadding"
            android:layout_width="match_parent"
            android:background="@mipmap/dark_bg"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/job_image_title_layout"
            android:layout_marginTop="@dimen/activity_post_video_job_info_layout_toppadding"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_post_video_job_info_layout_margin"
            android:layout_marginRight="@dimen/activity_post_video_job_info_layout_margin"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_centerVertical="true"
                android:id="@+id/job_image_layout"
                android:layout_width="@dimen/activity_post_video_job_info_image_size"
                android:layout_height="@dimen/activity_post_video_job_info_image_size">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/job_image"
                    android:layout_margin="@dimen/signup_image_padding"
                    app:civ_border="false"
                    app:civ_border_width="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/job_image_holder"
                    android:background="@mipmap/ic_image_holder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/job_title_label"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_post_video_job_info_title_text_leftmargin"
                android:layout_toRightOf="@+id/job_image_layout"
                android:textSize="@dimen/activity_post_video_job_info_title_field_textsize"
                android:text="@string/job_video_title_text"
                android:textColor="@color/login_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <EditText
                android:id="@+id/job_title_field_ed"
                android:layout_toRightOf="@+id/job_title_label"
                style="@style/post_job_title_edittext" />
        </RelativeLayout>
        <EditText
            android:id="@+id/job_desc_field_ed"
            android:layout_below="@+id/job_image_title_layout"
            style="@style/post_job_desc_edittext"/>
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/job_select_category"
            android:layout_marginTop="@dimen/activity_post_video_job_info_category_field_topmargin"
            android:layout_marginLeft="@dimen/activity_post_video_job_info_layout_margin"
            android:layout_marginRight="@dimen/activity_post_video_job_info_layout_margin"
            android:layout_below="@+id/job_desc_field_ed"
            android:background="@mipmap/dropdown_feild_1"
            android:paddingLeft="@dimen/activity_post_video_job_info_textfield_padding"
            android:paddingRight="@dimen/activity_post_video_job_info_textfield_padding"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_post_video_job_info_category_field_height">
        </android.support.v7.widget.AppCompatSpinner>
            <TextView
            android:id="@+id/job_select_location"
            android:layout_marginTop="@dimen/activity_post_video_job_info_category_field_topmargin"
            android:layout_marginLeft="@dimen/activity_post_video_job_info_layout_margin"
            android:layout_marginRight="@dimen/activity_post_video_job_info_layout_margin"
            android:layout_below="@+id/job_select_category"
            android:hint="@string/job_video_Location_hint"
                android:textColor="@color/signup_text_hint_color"
                android:textColorHint="@color/signup_text_hint_color"
                android:textSize="@dimen/signup_field_textsize"
            android:background="@mipmap/text_field"
            android:paddingLeft="@dimen/activity_post_video_job_info_textfield_padding"
            android:paddingRight="@dimen/activity_post_video_job_info_textfield_padding"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_post_video_job_info_category_field_height">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/job_video_layout"
        android:layout_below="@+id/job_info_layout"
        android:layout_width="match_parent"
        android:background="@mipmap/dark_bg"
        android:layout_height="@dimen/acitivity_posted_job_video_employeer_videoview_height">
        <ImageView
            android:id="@+id/job_video_record_videoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/video_thumbnail"/>
        <ImageButton
            android:id="@+id/job_video_record_button"
            android:layout_centerInParent="true"
            android:background="@mipmap/ic_play"
            android:layout_width="@dimen/activity_post_video_job_videoview_play_icon"
            android:layout_height="@dimen/activity_post_video_job_videoview_play_icon" />

    </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
