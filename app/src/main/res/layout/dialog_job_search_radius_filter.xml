<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@mipmap/pop_up"
    android:layout_width="@dimen/dialog_job_search_radius_width"
    android:layout_height="@dimen/dialog_job_search_radius_height">

    <TextView
        android:id="@+id/radius_filter_header"
        android:textColor="@color/header_text_color"
        android:layout_marginTop="@dimen/dialog_job_search_radius_topmargin"
        android:gravity="center_horizontal"
        android:textSize="@dimen/dialog_job_search_radius_header_textsize"
        android:text="@string/dialog_job_search_radius_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/radius_filter_seekbar"
        android:layout_width="match_parent"
        android:max="1000"
        android:progress="10"
        android:secondaryProgress="10"
        android:layout_marginLeft="@dimen/dialog_job_search_radius_margin"
        android:layout_marginRight="@dimen/dialog_job_search_radius_margin"
        android:layout_below="@id/radius_filter_header"
        android:layout_marginTop="@dimen/dialog_job_search_radius_detail_topmargin"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/radius_filter_detail"
        android:textColor="@color/header_text_color"
        android:layout_marginTop="@dimen/dialog_job_search_radius_detail_topmargin"
        android:gravity="center_horizontal"
        android:layout_below="@+id/radius_filter_seekbar"
        android:textSize="@dimen/dialog_job_search_radius_detail_textsize"
        android:text="@string/dialog_job_search_radius_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/radius_filter_done_button"
        android:textSize="@dimen/dialog_job_search_radius_header_textsize"
        android:text="@string/dialog_job_search_radius_done"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/pop_up_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_job_search_radius_button_height" />
</RelativeLayout>