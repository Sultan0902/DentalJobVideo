<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notification"
    android:layout_width="match_parent"
    android:background="@mipmap/bg"
    android:layout_height="match_parent"
    tools:context="com.vishant.DentalJobVideo.activity.NotificationActivity">

    <include
        android:id="@+id/top_header_layout"
        layout="@layout/top_header_layout">

    </include>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/nofification_activity_recyclerview_swipeRefresh"
        android:layout_below="@+id/top_header_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/notification_activity_notification_rv_topmargin"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/nofification_activity_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
